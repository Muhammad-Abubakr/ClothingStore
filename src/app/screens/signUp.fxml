<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox fx:id="signUpRoot" alignment="CENTER" prefHeight="400.0" prefWidth="240.0" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.SignUpController">
    <children>
        <Label text="Sign Up" textFill="#ae683f">
            <font>
                <Font name="Segoe UI Semibold" size="32.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <TextField promptText="username" />
        <TextField promptText="email" />
        <TextField promptText="password" />
        <TextField promptText="confirm password" />
        <Button fx:id="signUpSubmit" mnemonicParsing="false" text="Sign Up">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

    </children>
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="30.0" />
    </padding>
</VBox>
